%h1 Login
= form_tag login_create_path do
    = label :user, :user_id, "User-ID"
    = text_field :user, 'user_id', :id => "loginUser"
    
    = label :user, :email, 'E-Mail'
    = text_field :user, 'email', :id => "loginEmail"
    = button_to 'Login to my account', login_create_path, class: "btn btn-primary", :id => "login_submit" 
    
    = link_to "Sign-up for an account", new_user_path, :id => "signup"